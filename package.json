{
  "name": "echosphere",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -pt run build",
    "build:packages": "yarn workspace @echosphere/common run build && yarn workspace @echosphere/ai-logic run build && yarn workspace @echosphere/database run build",
    "dev:api": "yarn workspace @echosphere/api run dev",
    "dev:discord": "yarn workspace @echosphere/discord-bot run dev",
    "start:api": "yarn workspace @echosphere/api run start",
    "start:discord": "yarn workspace @echosphere/discord-bot run start",
    "install:all": "yarn install",
    "clean": "yarn workspaces foreach -pt exec rm -rf dist node_modules",
    "test": "yarn workspaces foreach -pt run test",
    "deploy:discord": "yarn workspace @echosphere/discord-bot run deploy"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.1.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
